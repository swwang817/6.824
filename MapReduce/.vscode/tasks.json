{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile master.cpp",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "master.cpp",
                "-o",
                "master",
                "-lzmq",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile master.cpp with ZeroMQ and pthread"
        },
        {
            "label": "Compile worker.cpp",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "worker.cpp",
                "-o",
                "worker",
                "-lzmq",
                "-pthread",
                "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile worker.cpp with dl, ZeroMQ, and pthread"
        }
    ]
}
